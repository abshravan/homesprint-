{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "CommonJS",
        "moduleResolution": "node",
        "allowImportingTsExtensions": false,
        "noEmit": false,
        "outDir": "dist-electron/main",
        "baseUrl": ".",
        "paths": {
            "@shared/*": [
                "./src/shared/*"
            ],
            "@main/*": [
                "./src/main/*"
            ]
        }
    },
    "include": [
        "src/main/**/*",
        "src/shared/**/*"
    ]
}