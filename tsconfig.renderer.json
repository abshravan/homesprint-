{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "module": "ESNext",
        "noEmit": true,
        "baseUrl": ".",
        "paths": {
            "@/*": [
                "./src/renderer/*"
            ],
            "@shared/*": [
                "./src/shared/*"
            ]
        }
    },
    "include": [
        "src/renderer/**/*",
        "src/shared/**/*"
    ]
}